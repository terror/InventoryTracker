<Window x:Class="InventoryTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryTracker"
        mc:Ignorable="d"
        Title="Inventory Tracker - Menu" Height="500" Width="600" Background="#1b1b1c" Foreground="#d2d2d9">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Text="Inventory Tracker &#x1F6CD;" FontSize="30" FontWeight="Bold" Grid.Row="0"/>

        <!-- Sorting -->
        <Grid HorizontalAlignment="Right" Margin="0,10,0,0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Sort by" Grid.Column="0"/>
            <ComboBox x:Name="cmbSortOptions" Width="120" Margin="5,0,20,0" Grid.Column="1"/>
        </Grid>

        <!-- Item List -->
        <ScrollViewer Margin="20,10,20,20" Grid.Row="2" HorizontalScrollBarVisibility="Disabled">
            <StackPanel x:Name="spItemList" Background="#0b0b0c">
                <Grid Background="#2b2b2c">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Item #1" FontSize="20" FontWeight="DemiBold" Padding="5" Grid.Column="0"/>
                    <TextBlock Text="Quantity:" VerticalAlignment="Center" Grid.Column="2"/>
                    <TextBlock Text="0" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="4"/>
                </Grid>
                <Grid Background="#3b3b3c">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Item #2" FontSize="20" FontWeight="DemiBold" Padding="5" Grid.Column="0"/>
                    <TextBlock Text="Quantity:" VerticalAlignment="Center" Grid.Column="2"/>
                    <TextBlock Text="0" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="4"/>
                </Grid>
                <Grid Background="#2b2b2c">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Item #3" FontSize="20" FontWeight="DemiBold" Padding="5" Grid.Column="0"/>
                    <TextBlock Text="Quantity:" VerticalAlignment="Center" Grid.Column="2"/>
                    <TextBlock Text="0" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="4"/>
                </Grid>
                <Grid Background="#3b3b3c">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Item #4" FontSize="20" FontWeight="DemiBold" Padding="5" Grid.Column="0"/>
                    <TextBlock Text="Quantity:" VerticalAlignment="Center" Grid.Column="2"/>
                    <TextBlock Text="0" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="4"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Create / Sell / Load / Save -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button Click="btnCreateItem_Click" Content="Create" Padding="5" Grid.Column="1"/>
            <Button Click="btnSellItem_Click" Content="Sell" IsEnabled="False" Padding="5" Grid.Column="3"/>
            <Button Click="btnLoadItem_Click" Content="Load" Padding="5" Grid.Column="5"/>
            <Button Click="btnSaveItem_Click" Content="Save" Padding="5" Grid.Column="7"/>
        </Grid>
        
        <!-- Value / Revenue -->
        <Grid Margin="0,20,0,0" Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Value:" Grid.Column="0"/>
            <TextBlock x:Name="txtValue" Text="$0.00" Grid.Column="2"/>
            <TextBlock Text="Revenue:" Grid.Column="4"/>
            <TextBlock x:Name="txtRevenue" Text="$0.00" Grid.Column="6"/>
        </Grid>
    </Grid>
</Window>
